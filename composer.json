{
    "require": {
        "bramus/router": "^1.6",
        "firebase/php-jwt": "^6.11"
    },
    "autoload": {
        "psr-4": {
            "Controllers\\": "app/controllers/",
            "Core\\": "app/core/",
            "Enum\\": "app/enum/", 
            "Middleware\\": "middleware/",
            "Migrate\\Migrations\\": "app/migrate/migrations/",
            "Migrate\\": "app/migrate/",
            "Models\\": "app/models/",
            "Interfaces\\": "app/interfaces/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "zanon": "php zanon",
        "migrate": "php zanon migrate",
        "make:migration": "php zanon.php make:migration",
        "test": "phpunit --configuration tests/phpunit.xml",
        "test-unit": "phpunit --configuration tests/phpunit.xml --testsuite Unit",
        "test-integration": "phpunit --configuration tests/phpunit.xml --testsuite Integration"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    }
}